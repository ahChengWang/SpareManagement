@model ComponentsListViewModel


<table class="table table-hover table-bordered"">
    <thead>
        <tr>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().PartNo)</th>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().Name)</th>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().PurchaseId)</th>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().Spec)</th>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().IsKeySpare)</th>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().IsCommercial)</th>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().Equipment)</th>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().Placement)</th>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().Inventory)</th>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().SafetyCount)</th>
            @*<th scope="col">@Html.DisplayNameFor(model => model.Details.First().Memo)</th>*@
            <th class="sticky-th1"></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Details)
        {
            <tr>
                <td width="8%">@item.PartNo</td>
                <td width="10%">@item.Name</td>
                <td>@item.PurchaseId</td>
                <td width="8%">@item.Spec</td>
                <td width="5%">@item.IsKeySpare</td>
                <td width="5%">@item.IsCommercial</td>
                <td>@item.Equipment</td>
                <td>@item.Placement</td>
                <td>@item.Inventory</td>
                <td width="5%">@item.SafetyCount</td>
                @*<td class="row-data">@item.Memo</td>*@
                <td>
                    <input id="@item.PartNo" type="button" onclick="onHistoryClick(this)" style="text-decoration:none;" class="btn btn-outline-danger btn-sm" value="History" />

                    @*<a href="Expendables/History?categoryId=1&partNo=@item.PartNo" target=_blank style="text-decoration:none;">
                            <span class="glyphicon glyphicon-list-alt"></span>
                        </a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
