@model HistoryViewModel

@{
}


<div class="container">
    <div class="card">
        @*<h3>@Html.DisplayNameFor(model => model.PartNo):@Model.PartNo </h3>*@
        <div class="card-header" style="background-color: slategrey;color:white">
            歷史紀錄　(@Html.DisplayNameFor(model => model.PartNo):@Model.PartNo)
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th class="col-md-2" scope="col">@Html.DisplayNameFor(model => model.details.First().Date)</th>
                        <th class="col-md-2" scope="col">@Html.DisplayNameFor(model => model.details.First().Status)</th>
                        <th class="col-md-1" scope="col">@Html.DisplayNameFor(model => model.details.First().Quantity)</th>
                        <th class="col-md-2"scope="col">@Html.DisplayNameFor(model => model.details.First().Employee)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.details.First().Memo)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.details)
                    {
                        <tr>
                            <td>@item.Date</td>
                            <td>@item.Status</td>
                            <td>@item.Quantity</td>
                            <td>@item.Employee</td>
                            <td>@item.Memo</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
