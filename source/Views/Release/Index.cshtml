<script type="text/javascript">
    $(document).ready(function () {
        $("#btnInsert").click(function (e) {
            var _model = {};

            var membersDetails = new Array();
            $("#instable tbody tr").each(function () {
                var row = $(this);
                var memberDetails = {};
                memberDetails.PartNo1 = row.find("td").eq(0).children().val();
                memberDetails.Count1 = row.find("td").eq(1).children().val();
                membersDetails.push(memberDetails);
            });

            _model['ReleaseList'] = membersDetails;
            _model['ReleaseUser'] = $('#releaseUser').val();
            _model['ReleaseDate'] = $('#releaseDate').val();
            _model['Memo'] = $('#memo').val();

            e.preventDefault();
            $.blockUI();
            $.ajax({
                type: "POST",
                url: "Release/Update",
                dataType: 'json',
                /*data: $('#form').serialize(),*/
                data: { 'releaseViewModel': _model },
                success: function (result) {
                    if (result == "") {
                        alert("全部領用成功");
                    }
                    else {
                        alert(result);
                        $.unblockUI();
                    }
                    $.unblockUI();
                    location.reload();
                }
            });
        })
    });

    $('#addBtn').on('click', function () {

        // Adding a row inside the tbody.
        $('#tbody').append(`
        <tr>
            <td>
                <input class="form-control" type="text" value="" />
            </td>
            <td>
                <input class="form-control" type="text" value="" />
            </td>
            <td>
                <input class="form-control" type="number" value="0" min="0" />
            </td>
            <td>
                <input class="btn" type="button" value="&times;" onclick="clickCancel(this)" />
            </td>
        </tr>`);
    });

    function clickCancel(e) {
        $(e).parent().parent().remove();
    }
</script>
