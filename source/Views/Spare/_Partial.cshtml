@model BasicInfoViewModel


<table class="table table-striped">
    <thead>
        <tr>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().PartNo)</th>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().Name)</th>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().PurchaseId)</th>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().Placement)</th>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().CreateDate)</th>
            <th class="sticky-th1"></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Details)
        {
            <tr>
                <td class="row-data">@item.PartNo</td>
                <td class="row-data">@item.Name</td>
                <td class="row-data">@item.PurchaseId</td>
                <td class="row-data">@item.Placement</td>
                <td class="row-data">@item.CreateDate</td>
                <td>
                    <input id="@item.PartNo" type="button" onclick="onEditClick(this)" style="text-decoration:none;" class="btn btn-outline-success btn-sm" value="Edit" />
                </td>
            </tr>
        }
    </tbody>
</table>
