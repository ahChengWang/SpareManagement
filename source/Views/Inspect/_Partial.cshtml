@model InspectSpareViewModel


<div class="row col-12">
    <div class="form-group form-row col-sm-4">
        <label>操作人員：</label>
        <input id="inspectUser" type="text" class="custom-control" />
    </div>
    <div class="form-group form-row col-sm-4">
        <label>操作時間：</label>
        <input id="inspectDate" type="date" class="custom-control" />
    </div>
</div>
<table class="table table-hover table-bordered">
    <thead style="background-color: slategrey; color: white; ">
        <tr>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().PartNo)</th>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().Name)</th>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().SerialNo)</th>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().Spec)</th>
            <th class="sticky-th1">@Html.DisplayNameFor(model => model.Details.First().NextInspectDate)</th>
            <th class="sticky-th1"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Details)
        {
            var trid = @item.SerialNo + "tr";
            <tr id="@trid">
                <td id="partNo" class="row-data">@item.PartNo</td>
                <td class="row-data">@item.Name</td>
                <td class="row-data">@item.SerialNo</td>
                <td class="row-data">@item.Spec</td>
                <td class="row-data">@item.NextInspectDate</td>
                <td>
                    <input id="@item.SerialNo" type="button" onclick="onInspectClick(this)" style="text-decoration:none;" class="btn btn-danger btn-sm" value="檢驗" />
                </td>
            </tr>
        }
    </tbody>
</table>
